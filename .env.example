# Interactive Brokers Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================================================
# CONNECTION SETTINGS - Trader Workstation (TWS) or IB Gateway
# ============================================================================
# Trader Workstation (TWS):
#   Paper Trading:  Port 7497 (default)
#   Live Trading:   Port 7496
#
# IB Gateway (lighter alternative):
#   Paper Trading:  Port 4002
#   Live Trading:   Port 4001
# ============================================================================

IB_HOST=127.0.0.1
IB_PORT=7497
IB_CLIENT_ID=1

# IB Account Credentials
IB_USERNAME=your_username_here
IB_PASSWORD=your_password_here

# Account Information
IB_ACCOUNT_ID=your_account_id_here

# Trading Mode
# Options: paper, live
TRADING_MODE=paper

# Logging Level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO


# ============================================================================
# ALPACA MARKETS CONFIGURATION (Paper Trading)
# ============================================================================
# Get your API keys at: https://app.alpaca.markets/
# Paper trading keys are separate from live trading keys.

ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# Paper trading (true) or live (false)
ALPACA_PAPER=true

# Trading mode for the Alpaca system
# Options: shadow (no orders), live (submit orders), replay (historical only)
ALPACA_TRADING_MODE=shadow

# Data feed: 'iex' (free) or 'sip' (paid $99/mo, all exchanges)
ALPACA_DATA_FEED=iex
